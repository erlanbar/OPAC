<section class="search-filters">
    <div class="container">
        <div class="filter-box">
            <h3>What are you looking for at the Library?</h3>
            @using (Html.BeginForm("AllBooks", "Home", FormMethod.Post))
            {
                <div class="col-md-2 col-sm-6">
                    <div class="form-group">
                        <label class="sr-only" for="keywords">Search by Keyword</label>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fa fa-search"></i></div>
                                    </div>
                                    <input id="inp_homeSearch" type="text" class="form-control" name="homeSearch" placeholder="Search by Keyword">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6">
                    <div class="form-group">
                        <select id="sel_tags" class="form-control">
                            <option value="0" selected>Search By Tags</option>
                            @foreach (var item in ViewBag.Tags)
                            {
                                <option value="@item.ID">@item.Description</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="form-group">
                        <select id="sel_categories" class="form-control">
                            <option value="0" selected>Search By Categories</option>
                            @foreach (var item in ViewBag.Categories)
                            {
                                <option value="@item.ID">@item.Description</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6">
                    <div class="form-group">
                        <select id="sel_orderBy" class="form-control">
                            <option value="0" selected>Order By</option>
                            <option value="1">New Arrival</option>
                            <option value="2">Top Rating</option>
                            <option value="3">Top View</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6">
                    <div class="form-group">
                        <input class="form-control" type="submit" value="Search">
                    </div>
                </div>
            }
        </div>
    </div>
</section>

